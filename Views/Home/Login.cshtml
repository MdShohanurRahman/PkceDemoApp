@{
    ViewBag.Title = "Login";
}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <h3 class="card-title mb-3">Sign in</h3>
                    <p class="text-muted">Authenticate with your Azure Active Directory account.</p>
                    <a class="btn btn-primary btn-lg" href="@Url.Action("Login","Home")">Login with Azure AD</a>
                </div>
            </div>
        </div>
    </div>
</div>
