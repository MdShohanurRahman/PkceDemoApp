@{
    ViewBag.Title = "Home";
}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <h2 class="card-title mb-3">Welcome @ViewBag.User!</h2>
                    <p class="text-muted">You are signed in with Azure AD.</p>
                    <form method="post" action="@Url.Action("Logout", "Home")" class="mt-3">
                        <button type="submit" class="btn btn-danger">Logout</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

